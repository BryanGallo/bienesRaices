extends ../layout/index.pug

block contenido
    section(class="py-10")
        //- h1(class="text-center text-2xl font-extrabold")=pagina //2 formas
        h1(class="text-center text-2xl font-bold") Bienes
            span(class="font-normal") Raices 
        h2(class="text-center text-2xl font-extrabold mt-2")=`${pagina}`

        div.mt-8.mx-auto.max-w-md
            a(href="/auth/login" class="text-gray-500 text-xm block mb-2 hover:text-sky-500") Regresar
            .bg-white.py-8.px-4.shadow.rounded-md
                form(method="POST" action="/auth/olvide-password" class="space-y-3") 
                    div 
                        label(for="correo" class="block pb-2  text-sm font-bold text-slate-700") Enviar Instrucciones 
                        input(type="email" id="correo" name="correo" placeholder="tucorreo@gmail.com" class="block py-2 px-2 w-full border-2 border-stone-200 rounded-md focus:outline-none focus:border-blue-300") 
                    input(type="submit" value="Enviar Correo" class="bg-sky-500 hover:bg-sky-600 w-full rounded-md py-2 px-2 text-white cursor-pointer")