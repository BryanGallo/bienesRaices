extends ../layout/index.pug

block contenido
    section(class="py-10")
        //- h1(class="text-center text-2xl font-extrabold")=pagina //2 formas
        h1(class="text-center text-2xl font-bold ") Bienes
            span(class="font-normal") Raices 
        h2(class="text-center text-2xl font-extrabold mt-2")=`${pagina}`
        if errores 
            div(class="max-w-md mx-auto my-10")
                //- para iterar
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md") #{error.msg}

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-md
                //- par desahabilitar las validaciones tipo HTML
                form(method="POST" action="/auth/registro" novalidate class="space-y-3")
                    //-  para recibir el csrfToken() el name debe tener el siguiente nombre
                    input(type="hidden", name="_csrf" value=csrfToken)
                    div
                        label(for="nombre" class="block pb-2 text-sm font-bold text-slate-700") Nombre 
                        input(type="text" id="nombre" name='nombre' placeholder="bryan" value=usuario ? usuario.nombre : '' class="block py-2 px-2 w-full border-2 border-stone-200 rounded-md focus:outline-none focus:border-blue-300" ) 
                    div 
                        label(for="correo" class="block pb-2  text-sm font-bold text-slate-700") Correo 
                        input(type="email" id="correo" name='correo' placeholder="tucorreo@gmail.com" value=usuario ? usuario.email : '' class="block py-2 px-2 w-full border-2 border-stone-200 rounded-md focus:outline-none focus:border-blue-300" ) 
                    div 
                        label(for="password" class="block pb-2 text-sm font-bold text-slate-700") Contraseña  
                        input(type="password" id="password" name="password" placeholder="Contraseña" class="block py-2 px-2 w-full border-2 border-stone-200 rounded-md focus:outline-none focus:border-blue-300" ) 
                    div 
                        label(for="repetir_password" class="block pb-2 text-sm font-bold text-slate-700") Repetir Contraseña
                        input(type="password" id="repetir_password" name="repetir_password" placeholder="Repetir Contraseña" class="block py-2 px-2 w-full border-2 border-stone-200 rounded-md focus:outline-none focus:border-blue-300")
                    div(class="flex items-center justify-end")
                        a(href="/auth/login" class="text-gray-500 text-xs hover:text-sky-500") Ya tienes cuenta? Inicia Sesión!
                    input(type="submit" value="Crear Cuenta" class="bg-sky-500 hover:bg-sky-600 w-full rounded-md py-2 px-2 text-white cursor-pointer")